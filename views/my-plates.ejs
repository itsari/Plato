<h1>My Cars</h1>
<a href="/add-plate" class="btn">Add New Car</a>
<% if (plates.length > 0) { %>
<table>
  <thead>
    <tr>
      <th>Plate</th>
      <th>Owner</th>
      <th>Phone</th>
      <th>Vehicle Type</th>
      <th>Color</th>
      <th>Photos</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% plates.forEach(plate => { %>
    <tr>
      <td><%= plate.plate %></td>
      <td><%= plate.owner || 'N/A' %></td>
      <td><%= plate.phone || 'N/A' %></td>
      <td><%= plate.vehicle_type || 'N/A' %></td>
      <td><%= plate.color || 'N/A' %></td>
      <td>
        <% if (plate.photos) { %> <% JSON.parse(plate.photos).forEach(photo => {
        %>
        <img src="/uploads/<%= photo %>" alt="Car Photo" width="100" />
        <% }); %> <% } else { %> No photos <% } %>
      </td>
      <td>
        <a href="/edit-plate/<%= plate.id %>">Edit</a> |
        <a
          href="/delete-plate/<%= plate.id %>"
          onclick="return confirm('Are you sure you want to delete this car?')"
          >Delete</a
        >
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } else { %>
<p>No cars added yet. <a href="/add-plate">Add one now!</a></p>
<% } %>
